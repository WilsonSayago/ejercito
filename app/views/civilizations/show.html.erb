<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @civilization.name %>
</p>

<p>
  <strong>Piqueros:</strong>
  <%= @civilization.piqueros %>
</p>

<p>
  <strong>Arqueros:</strong>
  <%= @civilization.arqueros %>
</p>

<p>
  <strong>Caballero:</strong>
  <%= @civilization.caballero %>
</p>

<br>
<h1>Ejercito</h1>
<%= link_to 'Agregar ejercito', new_civilization_army_path(@civilization) %>
<br><br>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Saldo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @civilization.armies.each do |army| %>
      <tr>
        <td><%= army.name %></td>
        <td><%= army.saldo %></td>
        <td><%= link_to 'Show', civilization_army_path(civilization_id: @civilization, id: army) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br><br>
<%= link_to 'Atras', civilizations_path %>
